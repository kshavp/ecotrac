    <script>
        document.addEventListener("DOMContentLoaded", function() {



            var ctx = document.getElementById('myChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Travel Distance', 'Electricity Consumption', 'Waste Produced', 'Natural Gas Usage'],
                    datasets: [{
                        label: 'Weekly Environmental Data',
                        data: [<%= transport%>, <%=electricity%>, <%=gas%>, <%=waste%>],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });

        var transport = <%= transport %>;
        var electricity = <%= electricity %>;
        var gas = <%= gas %>;
        var waste = <%= waste %>;

        // Create an array with labels and corresponding values
        var dataArr = [
            { label: 'üöåEffortlessly monitor and reduce your carbon footprint from travel.', value: transport },
            { label: 'ü™´Save energy by using energy-efficient appliances and turning off lights when not needed.', value: electricity },
            { label: '‚õΩReduce waste by practicing recycling and composting.', value: gas },
            { label: 'üöÆUse a reusable bottle for beverages on-the-go.', value: waste }
        ];
        var dataArrCh = [
            { label: `Book an online ticket for your next metro ride |<p class='text-green-600'>-558gm</p>`, value: transport },
            { label: `Use Matka for cooling drinking water instead of fridge`, value: electricity },
            { label: `Adopt clay untensils and organic plates for dining`, value: gas },
            { label: `Eat Vegetarian food for this week`, value: waste }
        ];

        

        // Sort the array in descending order based on values
        dataArr.sort((a, b) => b.value - a.value);
        dataArrCh.sort((a, b) => b.value - a.value);

        // Extract the top 3 items
        var top3 = dataArr.slice(0, 3);
        var top3Ch = dataArrCh.slice(0, 3);

        // Extract tips descriptions

        for (var i = 0; i < top3.length; i++) {
            var tipDescription = top3[i].label;
            document.getElementById('tip-' + (i + 1)).innerHTML = tipDescription;
            // document.getElementById('ch-' + (i + 1)).innerHTML = ChallengesDescriptions;
        }


    </script>

