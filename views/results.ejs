<%-include('header')-%>
<!-- Add this script tag to include Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">

<nav class="navbar p-4">
    <div class="container mx-auto flex justify-center md:justify-between items-center">
        <a href="/"><div class="text-white text-xl md:text-3xl font-bold mr-4">EcoTrac</div></a>
        <div class="space-x-2 md:space-x-4 md:text-lg">
            <a href="/" class="text-white active:underline curson-pointer">Home</a>
            <a href="about" class="text-white active:underline curson-pointer">About</a>
            <a href="team" class="text-white active:underline curson-pointer">Team</a>
            <a href="/" class="text-white active:underline curson-pointer">Logout</a>
            
        </div>
    </div>
</nav>

<div class="flex justify-between p-8">

    <div class="results-section w-1/4 bg-white p-8 rounded shadow-md">
        <h2 class="text-2xl font-semibold mb-4 text-center">EcoTracker - Weekly Environmental Results</h2>

        <div class="mb-4">
            <p class="text-gray-600">Travel Emission(kg CO2) <span class="font-bold"><%=transport%></span></p>
        </div>

        <div class="mb-4">
            <p class="text-gray-600">Electricity Emission (kg CO2): <span class="font-bold"><%=electricity%></span></p>
        </div>

        <div class="mb-4">
            <p class="text-gray-600">Waste Emission (kg CO2): <span class="font-bold"><%=gas%></span></p>
        </div>

        <div class="mb-4">
            <p class="text-gray-600">Natural Gas Emission (kg CO2): <span class="font-bold"><%=waste%></span></p>
        </div>

        <canvas id="myChart" width="400" height="400"></canvas>
    </div>
</div>

<div class="bg-gray-100 py-16">
    <div class="container mx-auto text-center">
        <h2 class="text-3xl font-extrabold mb-8">Tips for you ðŸ’¡</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
            <!-- Feature 1 -->
            <div class="p-6 bg-white rounded-lg shadow-md">
                <i class="fas fa-leaf text-teal-500 text-4xl mb-4"></i>
                <h3 class="text-xl font-semibold mb-2">Tip #1</h3>
                <p id="tip-1"></p>
            </div>
            <!-- Feature 2 -->
            <div class="p-6 bg-white rounded-lg shadow-md">
                <i class="fas fa-cogs text-teal-500 text-4xl mb-4"></i>
                <h3 class="text-xl font-semibold mb-2">Tip #2</h3>
                <p id="tip-2"></p>
            </div>
            <!-- Feature 3 -->
            <div class="p-6 bg-white rounded-lg shadow-md">
                <i class="fas fa-globe text-teal-500 text-4xl mb-4"></i>
                <h3 class="text-xl font-semibold mb-2">Tip #3</h3>
                <p id="tip-3"></p>
            </div>
        </div>
    </div>
</div>


</div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {



            var ctx = document.getElementById('myChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Travel Distance', 'Electricity Consumption', 'Waste Produced', 'Natural Gas Usage'],
                    datasets: [{
                        label: 'Weekly Environmental Data',
                        data: [<%= transport%>, <%=electricity%>, <%=gas%>, <%=waste%>],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });

        var transport = <%= transport %>;
        var electricity = <%= electricity %>;
        var gas = <%= gas %>;
        var waste = <%= waste %>;

        // Create an array with labels and corresponding values
        var dataArr = [
            { label: 'Effortlessly monitor and reduce your carbon footprint from travel.', value: transport },
            { label: 'Save energy by using energy-efficient appliances and turning off lights when not needed.', value: electricity },
            { label: 'Reduce waste by practicing recycling and composting.', value: gas },
            { label: 'Conserve natural gas by using energy-efficient cooking methods.', value: waste }
        ];

        

        // Sort the array in descending order based on values
        dataArr.sort((a, b) => b.value - a.value);

        // Extract the top 3 items
        var top3 = dataArr.slice(0, 3);

        // Extract tips descriptions
        // var tipsDescriptions = top3.map(item => item.label);

        for (var i = 0; i < top3.length; i++) {
            var tipDescription = top3[i].label;
            document.getElementById('tip-' + (i + 1)).innerHTML = tipDescription;
        }


    </script>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<!-- Owl Carousel JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>

<script>
    $(document).ready(function(){
        $(".owl-carousel").owlCarousel({
            items: 1,
            loop: true,
            autoplay: true,
            autoplayTimeout: 3000,
            autoplayHoverPause: true
        });
    });
</script>
